# ===========================================
# Environment: Production (AWS Amplify)
# ===========================================
# Note: Les valeurs sensibles doivent être configurées
# dans la console AWS Amplify > Environment Variables

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production

# API Configuration
# Sera remplacé par la variable Amplify
NEXT_PUBLIC_API_URL=/api

# AWS Configuration (Production)
# Ces valeurs seront injectées par Amplify
NEXT_PUBLIC_AWS_REGION=${AWS_REGION}
NEXT_PUBLIC_AWS_USER_POOL_ID=${COGNITO_USER_POOL_ID}
NEXT_PUBLIC_AWS_USER_POOL_CLIENT_ID=${COGNITO_CLIENT_ID}
NEXT_PUBLIC_AWS_APPSYNC_ENDPOINT=${APPSYNC_ENDPOINT}

# DynamoDB (Production - via AWS SDK)
DYNAMODB_TABLE_PREFIX=prod_

# Debug & Logging
NEXT_PUBLIC_DEBUG=false
LOG_LEVEL=error

# Google Drive Integration (Production)
NEXT_PUBLIC_GOOGLE_DRIVE_ENABLED=true
